<% readonly = can_not_edit?(statefield) ? {:disabled => "disabled"} : {} %>
<%=select(statefield.question_table, statefield.question_column, State.US_STATES, 
            {:include_blank => true}, 
            {:class => statefield.css_class, :onFocus => "Highlight(this)", 
            :onBlur => "UnHighlight(this)", :onChange => "set_dirty();"}.merge(readonly)) %>
