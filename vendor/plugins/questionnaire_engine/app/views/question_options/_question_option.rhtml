		<tr id="option_<%=@question_option.id%>">
			<td class="question_option">
				<%= in_place_editor_field :question_option, :option, {}, :url => set_question_option_option_question_option_url(@question_option) %>&nbsp;&nbsp;
			</td>
			<td class="question_option">
				<%= in_place_editor_field :question_option, :value, {}, :url => set_question_option_value_question_option_url(@question_option) %>
