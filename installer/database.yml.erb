defaults: &defaults
<% if @settings[:adapter] == 'mysql' %>
  adapter: mysql
  host: <%= @settings[:host] %>
  username: <%= @settings[:user] %>
  password: <%= @settings[:pass] %>
  socket: <%= @settings[:sock] || '/tmp/mysql.sock' %>
<% end %>
<% for title, db_name in @dbs %>

<%= title %>:
  database: <%= db_name %>
  <<: *defaults
<% end %>
