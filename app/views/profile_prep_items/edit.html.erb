<h1>Editing prep_item</h1>

<% form_for(@prep_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :deadline %><br />
    <%= f.date_select :deadline %>
  </p>
  <p>
    <%= f.label :project_id%><br />
    <%= f.select(:project_id, @projects, options ={:prompt => "Select a project, or leave blank"}) %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @prep_item %> |
<%= link_to 'Back', prep_items_path %>
