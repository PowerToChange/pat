<% form_tag :action => 'send_test_email' do %>
subject: <%= text_field_tag 'subject', 'pat test email' %><br/>
from: <%= text_field_tag 'from', @viewer.viewer.person.email %><br/>
to: <%= text_field_tag 'to' %><br/>
cc: <%= text_field_tag 'cc' %><br/>
bcc: <%= text_field_tag 'bcc' %><br/>

<%= text_area_tag 'message' %><br/>
<%= submit_tag 'Send' %>
<% end %>
