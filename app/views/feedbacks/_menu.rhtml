
<% content_for "submenu" do %>
    <!-- no point in adding the menu for people who aren't projects
      coordinators, since they will only have the 'add' item -->
    <% if @user.is_projects_coordinator? %>
        <%= sub_menu_item 'New', :feedbacks, :new %>
        <%= sub_menu_item 'List', :feedbacks, :list %>
    <% end %>
<% end %>
