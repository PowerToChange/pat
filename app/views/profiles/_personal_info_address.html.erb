<%= custom_element_text_field("#{label_prefix} Address: ", :appln_person, :"person_#{mid}addr") %>

<%= custom_element_text_field("#{label_prefix} City: ", :appln_person, :"person_#{mid}city") %>

<%= custom_element_item("#{label_prefix} Country: ", :appln_person, :"person_#{mid}country_id") do |m,c,classes|
      r = collection_select(m, c, Country.find(:all), :id, :country_desc, 
                 { :include_blank => true }, { :class => classes })
      r += observe_field "#{m}_#{c}", :function => "update_province_select('#{mid}')"
      r
    end
%>

<%= custom_element_item("#{label_prefix} Province: ", :appln_person, :"person_#{mid}province_id") do |m,c,classes|

      r = ''
      for country in Country.find(:all)
        id = "#{m}_#{c}_#{country.id}"
        r += collection_select(m, c, country.provinces, :id, :province_desc, 
          { :include_blank => true }, { 
            :class => classes,
            :style => "display:none;",
            :name => id,
            :id => id
          })
      end

      r
    end
%>

<script>
  // NOTE: function also defined in questionnaire.js since this is loaded in a remote request
  //         which doesn't let you defined functions
  function update_province_select(mid) {
    last_province_id = 'appln_person_person_'+mid+'province_id';
    country_province_id = last_province_id+'_'+$('appln_person_person_'+mid+'country_id').value;

    // set visibility before ids get switched around
    if ($(last_province_id) != null) { $(last_province_id).hide(); }
    $(country_province_id).show();

    // update names so currently chosen country's province list is the value used in assigning province_id
    if ($(last_province_id) != null) { $(last_province_id).name = ''; }
    $(country_province_id).name = 'appln_person[person_'+mid+'province_id]';

    // update ids so the chosen country's province list is identifiable as $(province_id)
    if ($(last_province_id) != null) { $(last_province_id).id = $(last_province_id).orig_id; }
    $(country_province_id).orig_id = country_province_id;
    $(country_province_id).id = last_province_id;
  }
  update_province_select('<%= mid %>');
</script>

