<% if Pat::CONFIG[:emerg_contact_cdn_style] %>
  <% for field in [ 'Name', ['Rship','Relationship'], 'Home', 'Work', 'Mobile', 'Email' ] %>
    <% if field.class == Array then suffix, label = field else suffix = label = field end %>
    <P><%= label %>: <%= text_field :emerg, :"#{prefix}#{suffix}" %>
  <% end %>
<% else %>
  <%= render :partial => 'profiles/personal_info_address', :locals => { :label_prefix => 'Emergency ', :mid => 'emergency' } %>
<% end %>
