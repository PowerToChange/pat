<% form_remote_for prep_item,
      :url => "/prep_items/#{prep_item.id}.js",
      :loading => "$('loading').show();",
      :loaded => "$('loading').hide();" do |f| %>
  
    <%= render :partial => 'prep_items/form', :locals => { :f => f }  %>
  
     <% for project in @checkbox_projects %>
  <%= check_box_tag "prep_item[project_ids][]", project.id, prep_item.projects.include?(project) %> 
  <%= 'Applies to ' + project.title %> <br />
 <% end %>
  
    <%= submit_tag 'Save' %>
    
    <%= link_to_function 'cancel', "$('edit_#{prep_item.id}').hide(); $('show_#{prep_item.id}').show();" %>
<% end %>