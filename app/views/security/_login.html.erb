<% form_tag :action => (@login_action || :login) do -%>
  <fieldset>
    <legend><%= @login_title || 'Login' %></legend>
    <ol>
      <li><label>Username: </label><%= text_field_tag 'username', {} %></li>
      <li><label>Password: </label><%= text_field_tag 'password', {}, :type => 'password' %></li>
    </ol>
    <img src="/images/login.jpg" width="50px" />
    <%= submit_tag 'Login', :id => 'submit' %>
  </fieldset>   
<% end -%>
<div id="account_links">
  <% if @content_for_account_links %>
    <%= yield :account_links %>
  <% else %>
    <%= link_to "Create an Account", "/security/signup" %>
    | <%= link_to "Change Password", "https://signin.mygcx.org/sso/selfservice/protected/password/changePassword.jsp" %>
    | <%= link_to "Reset Password", "https://signin.mygcx.org/sso/selfservice/resetPassword.jsp" %>
  <% end %>
</div>

